<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="main_tv">
    <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textColor">@drawable/color_main_btn</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginHorizontal">@dimen/dp_15</item>
        <item name="android:paddingVertical">@dimen/dp_10</item>
        <item name="android:layout_marginVertical">5dp</item>
        <!--系统无边界波浪最小版本要设置为minSdkVersion 21-->
        <item name="android:background">@drawable/wave_main_btn</item>
    </style>


    <style name="CountdownViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/countdown_selector</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:minWidth">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">发送验证码</item>
        <item name="android:textColor">@drawable/countdown_color_selector</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
